{
	"editor.defaultFormatter": "biomejs.biome",
	"editor.formatOnSave": true,
	"[javascript]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[typescript]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[json]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"editor.codeActionsOnSave": {
		"source.fixAll.biome": "always"
	},
	"prettier.enable": false,
	"prisma.pinToPrisma6": true
}
